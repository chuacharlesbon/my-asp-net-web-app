            <button class="bg-info rounded px-4 py-2 text-white my-4">
                LEARN MORE
            </button>
        </div>
    </div>

    @*Subject 2 section*@
    <div class="py-5" />
    <h3 class="py-4 text-center">Unleash Your Coding Potential</h3>
    <div class="row mx-auto align-items-center justify-content-center">
        <div class="d-md-none col-10 align-items-center justify-content-center text-center">
